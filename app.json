        "learnmode": {
          "instruction": {
            "en": "Press the button on the side of the unit for 5 seconds."
          }
        }
      },
      "settings": [
        {
          "id": "temperature_offset",
          "type": "number",
          "label": {
            "en": "Temperature offset (째C)"
          },
          "hint": {
            "en": "Set a value to compensate a temperature offset.\nRange: -10 - 10, step size 0.1, \ndefault: 0 [째C]"
          },
          "value": 0,
          "attr": {
            "min": -10,
            "max": 10,
            "step": 0.1
          }
        },
        {
          "id": "temperature_decimals",
          "type": "radio",
          "label": {
            "en": "Temperature reporting decimals"
          },
          "value": "1",
          "values": [
            {
              "id": "1",
              "label": {
                "en": "Report temperature value with 1 decimal (21.4 째C)"
              }
            },
            {
              "id": "2",
              "label": {
                "en": "Report temperature value with 2 decimals (21.37 째C)"
              }
            }
          ]
        },
        {
          "id": "humidity_decimals",
          "type": "radio",
          "label": {
            "en": "Humidity reporting"
          },
          "value": "1",
          "values": [
            {
              "id": "1",
              "label": {
                "en": "Report humidity value with 1 decimal (35.2 %)"
              }
            },
            {
              "id": "2",
              "label": {
                "en": "Report humidity value with 2 decimals (35.19 %)"
              }
            }
          ]
        },
        {
          "id": "battery_threshold",
          "type": "number",
          "label": {
            "en": "Battery alarm threshold (%)"
          },
          "hint": {
            "en": "Battery level (%) below which the battery alarm will be activated.\nRange: 1 - 90, \ndefault: 20 [%]"
          },
          "value": 20,
          "attr": {
            "min": 1,
            "max": 90
          }
        },
        {
          "id": "minReportTemp",
          "type": "number",
          "label": {
            "en": "Min report interval for Temperature (seconds)"
          },
          "hint": {
            "en": "Set a value for min report interval.\nRange: 30 - 86400, step size 1, \ndefault: 60"
          },
          "value": 60,
          "attr": {
            "min": 30,
            "max": 86400,
            "step": 1
          }
        },
        {
          "id": "maxReportTemp",
          "type": "number",
          "label": {
            "en": "Max report interval for Temperature (seconds)"
          },
          "hint": {
            "en": "Set a value for max report interval.\nRange: 600 - 86400, step size 1 (Must be larger than Min report interval), \ndefault: 300"
          },
          "value": 300,
          "attr": {
            "min": 30,
            "max": 86400,
            "step": 1
          }
        },
        {
          "id": "minReportHum",
          "type": "number",
          "label": {
