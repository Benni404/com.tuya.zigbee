  "drivers": [
    {
      "id": "doorwindowsensor",
      "name": {
        "en": "Door & Window Sensor (ZigBee)"
      },
      "class": "sensor",
      "capabilities": [
        "alarm_contact",
        "measure_battery",
        "alarm_battery"
      ],
      "energy": {
        "batteries": [
          "CR2032"
        ]
      },
      "images": {
        "large": "/drivers/doorwindowsensor/assets/images/large.png",
        "small": "/drivers/doorwindowsensor/assets/images/small.png"
      },
      "zigbee": {
        "manufacturerName": [
          "TUYATEC-g3gl6cgy",
          "TUYATEC-Bfq2i2Sy",
          "TUYATEC-abkehqus",
          "TUYATEC-sb6t7ett",
          "TUYATEC-rkqiqvcs"
        ],
        "productId": [
          "RH3001"
        ],
        "endpoints": {
          "1": {
            "clusters": [
              0,
              1,
              3,
              1280
            ],
            "bindings": [
              1,
              1280
            ]
          }
        },
        "learnmode": {
          "image": "/drivers/doorwindowsensor/assets/learn.svg",
          "instruction": {
            "en": "Insert a pin into the single hole on the side of the device and press it gently for aprox 10 seconds until the LED blinks rapidly."
          }
        }
      },
      "settings": [
        {
          "id": "battery_threshold",
          "type": "number",
          "label": {
            "en": "Battery alarm threshold (%)"
          },
          "hint": {
            "en": "Battery level (%) below which the battery alarm will be activated.\nRange: 1 - 90, \ndefault: 20 [%]"
          },
          "value": 20,
          "attr": {
            "min": 1,
            "max": 90
          }
        }
      ]
    },
